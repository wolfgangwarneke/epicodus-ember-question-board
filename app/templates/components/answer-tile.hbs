{{#unless editing}}
  {{answer.answer}}
{{else}}
  {{input value=answer.answer}}
  <span class="saveButton" {{action 'updateAnswer' answer}}>Save</span>
{{/unless}}
by {{answer.user.username}}
{{#if loggedInUserMatch}}
  {{#unless editing}}
    <span class="editButton" {{action 'edit'}}>Edit</span>
  {{/unless}}
  <span class="deleteButton" {{action 'deleteAnswer' answer}}>Delete</span>
{{/if}}
